@model CAYCANHNT.Models.CATOLOGY

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
 
<div style="height:15px"></div>
<div class="panel panel-red">
    <div class="panel-heading">Xem thông tin Loại hàng</div>
    <div class="panel-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.Raw("Tên thể loại: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NAME_CAT)
                </dd>

                <dt>
                    @Html.Raw("Meta: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.META)
                </dd>

                <dt>
                    @Html.Raw("Sắp xếp: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ORDER)
                </dd>

                <dt>
                    @Html.Raw("Liên kết: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LINK)
                </dd>

                <dt>
                    @Html.Raw("Trạng thái: ")
                </dt>

                <dd>
                    @{ var chk = (Model.HIDE == 0) ? "Hiện" : "Ẩn";}
                    @Html.DisplayFor(model => chk)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Sửa", "Edit", new { id = Model.ID_CAT }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Quay về", "Index", "Index", new { @class = "btn btn-danger" })
        </p>
    </div>
</div>
