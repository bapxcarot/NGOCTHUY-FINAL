@model CAYCANHNT.Models.CONTACT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div style="height:15px"></div>
<div class="panel panel-red">
    <div class="panel-heading">Xoá ?</div>
    <div class="panel-body">
        <h3 style="color:red">Bạn có chắc chắn muốn xoá mục này?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.Raw("Thời gian gửi: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.datebegin)
                </dd>

                <dt>
                    @Html.Raw("Tên khách hàng: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.username)
                </dd>

                <dt>
                    @Html.Raw("Địa chỉ Email: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt>
                    @Html.Raw("Tiêu đề: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.title)
                </dd>

                <dt>
                    @Html.Raw("Nội dung: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.detail)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="XOÁ" class="btn btn-danger" /> |
                    @Html.ActionLink("Quay về", "Index", "Index", new { @class = "btn btn-success" })
                </div>
            }
        </div>
    </div>
</div> 