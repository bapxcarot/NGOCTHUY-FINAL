@using CAYCANHNT.Help
@model IEnumerable<CAYCANHNT.Models.CONTACT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@section _header
{
    <!-- DataTables CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}
<div style="height:15px"></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Danh sách Phản hồi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @*<p>
                        @Html.ActionLink("Thêm mới", "Create", "Create", new { @class = "btn btn-success" })
                    </p>*@
                <table style="width:100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th style="text-align:center">
                                STT
                            </th>
                            <th style="text-align:center">
                                Thời gian gửi
                            </th>
                            <th style="text-align:center">
                                Tên khách hàng
                            </th>
                            <th style="text-align:center">
                                Email
                            </th>
                            <th style="text-align:center">
                                Tiêu đề
                            </th>
                            <th style="text-align:center">
                                Chức năng
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">
                                    @Html.Raw(i++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.datebegin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.title)
                                </td>
                                <td style="text-align:center">
                                    @*@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Sửa", "Edit", "Blogs", routeValues: new { id = item.ID_BLOG }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })*@
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Chi tiết", "Details", "Contacts", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Xoá", "Delete", "Contacts", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
@section _footer
                {
    <!-- DataTables JavaScript -->
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}
