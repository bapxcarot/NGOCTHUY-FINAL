@model CAYCANHNT.Models.PRODUCT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div style="height:15px"></div>
<div class="panel panel-red">
    <div class="panel-heading">Xoá ?</div>
    <div class="panel-body">
        <h3 style="color:red">Bạn có chắc chắn muốn xoá sản phẩm này?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt style="margin-bottom:5px">
                    @Html.Raw("Tên sản phẩm: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NAME_PRO)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Số lượng: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NUMS)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Giá: ")
                </dt>

                <dd>
                    @String.Format("{0:c}", Model.PRICE)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Chi tiết: ")
                </dt>

                <dd>
                    @Html.Raw(Model.DETAIL)
                </dd>

                <dt style="margin-bottom:20px">
                    @Html.Raw("Hình ảnh: ")
                </dt>

                <dd>
                    <img src="~/Content/upload/img/product/@Model.IMG1" width="100px" />
                    <img src="~/Content/upload/img/product/@Model.IMG2" width="100px" />
                    <img src="~/Content/upload/img/product/@Model.IMG3" width="100px" />
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Meta: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.META)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Sắp xếp: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ORDER)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Liên kết: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LINK)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Trạng thái: ")
                </dt>

                <dd>
                    @{ var chk = (Model.HIDE == 0) ? "Hiện" : "Ẩn";}
                    @Html.DisplayFor(model => chk)
                </dd>

                <dt style="margin-bottom:5px">
                    @Html.Raw("Loại hàng: ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CATOLOGY.NAME_CAT)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="XOÁ" class="btn btn-danger" /> |
                    @Html.ActionLink("Quay về", "Index", "Index", new { @class = "btn btn-success" })
                </div>
            }
        </div>
    </div>
</div>
