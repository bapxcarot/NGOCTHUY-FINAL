                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PERMISSION, "Quyền hạn", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PERMISSION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PERMISSION, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LINK, "Liên kết", htmlAttributes: new { @class = "control-label col-md-2" })
