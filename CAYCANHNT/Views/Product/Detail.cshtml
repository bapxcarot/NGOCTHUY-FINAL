@model CAYCANHNT.Models.PRODUCT
@{
    ViewBag.Title = Model.NAME_PRO;
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@Styles.Render("~/css/detail")
@Scripts.Render("~/js/detail")

<script>
    jQuery(document).ready(function ($) {

        $('#etalage').etalage({
            thumb_image_width: 300,
            thumb_image_height: 350,
            source_image_width: 900,
            source_image_height: 1200,
            show_hint: true,
            click_callback: function (image_anchor, instance_id) {
                alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
            }
        });

    });
</script>

<script type="text/javascript" id="sourcecode">
    $(function () {
        $('.scroll-pane').jScrollPane();
    });
</script>

<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.12&appId=378364479306045&autoLogAppEvents=1';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

<script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>

<div class="container">
    <div class="single">
        <div class="col-md-12">
            <div class="single_grid">
                <div class="grid images_3_of_2">
                    <ul id="etalage">
                        <li>
                            <a href="optionallink.html">
                                <img class="etalage_thumb_image img-responsive" src="~/Content/upload/img/product/@Model.IMG1" alt="">
                                <img class="etalage_source_image img-responsive" src="~/Content/upload/img/product/@Model.IMG1" alt="">
                            </a>
                        </li>
                        <li>
                            <img class="etalage_thumb_image img-responsive" src="~/Content/upload/img/product/@Model.IMG2" alt="">
                            <img class="etalage_source_image img-responsive" src="~/Content/upload/img/product/@Model.IMG2" alt="">
                        </li>
                        <li>
                            <img class="etalage_thumb_image img-responsive" src="~/Content/upload/img/product/@Model.IMG3" alt="">
                            <img class="etalage_source_image img-responsive" src="~/Content/upload/img/product/@Model.IMG3" alt="">
                        </li>
                    </ul>
                    <div class="clearfix"> </div>
                </div>
                <!---->
                <div class="span1_of_1_des">
                    <div class="desc1">
                        <h3 style="color:#0094ff"><strong>Tên sản phẩm: @Model.NAME_PRO</strong></h3>
                        <p><strong><u>Chi tiết sản phẩm:</u></strong></p>
                        <p style="margin-right:2.7em;">@Model.DETAIL</p>
                        <h5 style="color:#ff0000; font-size:1.5em"><strong>Giá tiền: @Model.PRICE VNĐ</strong></h5>
                        <div class="available">
                            <h4>Các lựa chọn hiện có :</h4>
                            <ul>
                                <li>
                                    Cở chậu:
                                    <select>
                                        <option>L</option>
                                        <option>XL</option>
                                        <option>S</option>
                                        <option>M</option>
                                    </select>
                                </li>
                                <li>
                                    Số lượng:
                                    <select>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </li>
                            </ul>
                            <div>
                                @{
                                    var session = (CAYCANHNT.Common.UserLogin)Session[CAYCANHNT.Common.CommonConstant.USER_SESSION];
                                }
                                @if (session != null)
                                {
                                    <a href="/them-gio-hang?ProductId=@Model.ID_PRO&Quantity=1" style="color:red; font-size: 15px; font-weight: bold">MUA HÀNG</a>
                                }
                                else
                                {
                                    <a href="/dang-nhap" style="color:red; font-size: 15px; font-weight: bold">MUA HÀNG</a>
                                }
                                
                            </div>
                            
                            <div class="clearfix"></div>
                        </div>
                        <div class="share-desc">
                            <div class="share">
                                <h4>CHIA SẺ:</h4>
                                <div class="fb-like" data-href="https://www.facebook.com/olympicithutech" data-width="400" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
                                <div style="margin-top:10px">
                                    <g:plusone size="medium"></g:plusone>
                                    <div class="fb-save" data-uri="https://www.facebook.com/olympicithutech" data-size="large"></div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>

            <!----- tabs-box ---->
            <div style="width:55%">
                <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-width="100%" data-numposts="1"></div>
            </div>
        </div>
        <!---->

        <div class="clearfix"> </div>
    </div>
</div>